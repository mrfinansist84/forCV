<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="activ">Login</a></li>
                <li class="tab col s6"><a href="#register">SignUp</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Login to the shop</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="text" class="validate" required>
                    <label for="email">Input your email</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="text" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h1>Sign up to the shop</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" name="email" type="text" class="validate" required>
                    <label for="remail">Input your email</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" name="password" type="text" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                <div class="input-field">
                    <input id="confirme" name="confirme" type="text" class="validate" required>
                    <label for="confirme">Confirme password</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Your name</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>
                 <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>
</div>