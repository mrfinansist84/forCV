<h1>ADD PET</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Pet naming</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required>
        <label for="image">URL picture</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id="description" name="description" type="text" class="validate" required>
        <label for="description">Description</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
     <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add pet</button>
</form>