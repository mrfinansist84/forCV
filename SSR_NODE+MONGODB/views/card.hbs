<h1>Cart</h1>

<div id="cart">
    {{#if petCards.length}}
    <table>
        <thead>
            <th>Naming</th>
            <th>Quantity</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {{#each petCards}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button 
                    class="btn btn-small js-remove" 
                    data-id={{id}}
                    data-csrf={{@root.csrf}}
                    >
                        Delete
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Total price: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Order</button>
    </form>
</div>

{{else}}
<p>Cart is empty</p>
{{/if}}