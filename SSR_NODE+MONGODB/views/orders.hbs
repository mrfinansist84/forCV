<h1>MY ORDERS</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    Order <small>{{_id}}</small>
                </span>
               <p class="date">{{date}}</p>
                <p><em>{{user.userId.name}}</em><em>{{user.userId.email}}</em></p>
                <ol>
                    {{#each petCards}}
                    <li>
                        {{petCard.title}}(x <strong>{{count}}</strong>)
                    </li>
                    {{/each}}
                </ol>
                <hr>
                <p>Price: <span class="price">{{price}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{/if}}